<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/course_home_meet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center">
    
    <GridView
        android:id="@+id/course_grid_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:numColumns="auto_fit"
        android:verticalSpacing="10dp"
    	android:horizontalSpacing="10dp"
    	android:stretchMode="columnWidth"
    	android:gravity="center" >
        
    </GridView>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_meet_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:onClick="showCourseAdder"
                android:text="@string/addCourse" />

	        <Button
	            android:id="@+id/removeCourse"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:onClick="showDeleteCourseDialog"
	            android:text="@string/removeCourseButton" />
        </LinearLayout>
        
    </RelativeLayout>

</LinearLayout>